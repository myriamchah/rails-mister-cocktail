<h1 class="p-3">Cocktails !</h1>

<div class="container">
  <!-- Content here -->
  <div class="row">
      <% @cocktails.each do |cocktail|  %>
       <div class="col-4 p-3">
        <div class="card" >
          <img class="card-img-top " src="https://images.unsplash.com/photo-1527761939622-9119094630cf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1400&q=60">
          <div class="card-body">
            <p class="card-text"><%= cocktail.name %></p>
             <%= link_to "Get the recipe!", cocktail_path(cocktail)  %>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to "Add your cocktail!", new_cocktail_path  %>
  </div>
</div>

